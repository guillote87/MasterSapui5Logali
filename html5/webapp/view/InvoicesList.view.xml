<mvc:View controllerName="gq4dev.html5.controller.InvoicesList" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <List id="InvoicesList" 
          items="{ path:'northwind>/Invoices',
                   sorter:{ path:'ShipperName',
                            group: true
                            }
                   }" 
            class="sapUiResponsiveMargin" width="auto">
        <headerToolbar>
            <Toolbar>
                <Title text="{i18n>invoicesListTitle}" />
                <ToolbarSpacer />
                <SearchField width="50%" search="onFilterInvoices" />
            </Toolbar>
        </headerToolbar>
        <items>
            <ObjectListItem
                title="{northwind>Quantity} x {northwind>ProductName}"
                number="{
				parts:[{path:'northwind>ExtendedPrice'},{path:'currency>/usd'}],
				type: 'sap.ui.model.type.Currency',
				formatOptions: {
                    showMeasure: false,
                    decimals:2,
                    style:'short',
                    roundingMode:'TOWARDS_ZERO'
                    }
			}"
                numberUnit="{currency>/usd}"
                numberState="{= ${northwind>ExtendedPrice} > 50 ? 'Success' : 'Error'}"
            >
                <firstStatus>
                    <ObjectStatus text="{path:'northwind>Status',
                                         formatter:'.formatter.invoiceStatus'
                                         }" />
                </firstStatus>
            </ObjectListItem>
        </items>
    </List>
</mvc:View>
